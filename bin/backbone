#!/usr/bin/env ruby
# frozen_string_literal: true
Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

require "pathname"

# Load Bundler dependencies
require "bundler/setup"

# Load backbone's directory
backbone_directory = File.expand_path("../backbone", __dir__)
$LOAD_PATH.unshift(backbone_directory) unless $LOAD_PATH.include?(backbone_directory)

# Load Backbone
require 'backbone'

exit(Backbone::ErrorHandler.call do
  Backbone::EntryPoint.call(ARGV.dup)
end)
