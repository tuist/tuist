<%= stylesheet_link_tag 'tailwind' %>
<%= stylesheet_link_tag 'app' %>

<section class=" bg-gray-900">
  <div class="flex-col flex items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a
      href="/"
      class="flex items-center space-x-4 mb-6 text-2xl font-semibold text-white"
    >
      <%= svg('tuist_cloud_logo', class: "w-8") %>
      <div>Tuist Cloud</div>
    </a>
    <div class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-gray-800 border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-white">
          Change your password
        </h1>
        <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="mb-4">
            <label for="password" class="block text-sm text-white font-medium mb-2">
              Password
            </label>
            <%= f.password_field :password, class: "form-control input-primary", autofocus: true, placeholder: "Enter your new password" %>
          </div>
          <div class="mb-4">
            <label for="password_confirmation" class="block text-sm text-white font-medium mb-2">
              Password confirmation
            </label>
            <%= f.password_field :password_confirmation, class: "form-control input-primary", placeholder: "Confirm your password" %>
          </div>
          <%= render "devise/shared/error_messages", resource: resource %>
          <% if alert.present? %>
            <div class="w-full flex flex-col items-start text-white focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 my-4 text-center bg-red-600" role="alert">
              <%= alert %>
            </div>
          <% end %>
          <div class="mb-6">
            <p class="text-gray-300">
              Have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "text-white" %>
            </p>
          </div>
        <button
          class="btn-primary"
          type="submit"
        >
          <%= f.submit "Reset my password" %>
        </button>
      <% end %>
    </div>
  </div>
</section>
