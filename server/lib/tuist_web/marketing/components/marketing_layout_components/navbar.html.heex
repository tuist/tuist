]

resources_items = [
  %{
    icon: :users,
    title: dgettext("marketing", "About"),
    subtitle: dgettext("marketing", "Learn about Tuist and meet the team"),
    href: TuistWeb.Marketing.MarketingHTML.localized_href("/about")
  },
  %{
    icon: :brand_slack,
    title: dgettext("marketing", "Slack"),
