<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title><%= dgettext("marketing", "Tuist Case Studies") %></title>
  <subtitle><%= dgettext("marketing", "Learn how teams use Tuist to scale their iOS development.") %></subtitle>
  <link href="<%= Tuist.Environment.app_url(path: ~p"/case-studies") %>"/>
  <link href="<%= Tuist.Environment.app_url(path: ~p"/case-studies/atom.xml") %>" rel="self"/>
  <id><%= Tuist.Environment.app_url(path: ~p"/case-studies") %></id>
  <updated><%= DateTime.new!(@last_build_date, ~T[00:00:00], "Etc/UTC") |> Timex.format!("{RFC3339}") %></updated>

  <%= for case_study <- @cases do %>
    <entry>
      <title><![CDATA[ <%= case_study.title %> ]]></title>
      <author>
        <name><![CDATA[ <%= case_study.company %> ]]></name>
      </author>
      <summary type="html"><![CDATA[ <%= case_study.title %> - <%= case_study.company %> ]]></summary>
      <link href="<%= Tuist.Environment.app_url(path: case_study.slug) %>"/>
      <id><%= Tuist.Environment.app_url(path: case_study.slug) %></id>
      <updated><%= DateTime.new!(case_study.date, ~T[00:00:00], "Etc/UTC") |> Timex.format!("{RFC3339}") %></updated>
      <content type="html"><![CDATA[ <%= case_study.body %> ]]></content>
    </entry>
  <% end %>
</feed>
