{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "frontend/*"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "../../../**/*.spec.ts",
    "stories",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
