root = true

[*]
insert_final_newline = true

[*.{js,json}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[{Gemfile,Gemfile.lock,*.rb,*.ru,*.erb}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{yml,yaml}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[{src,scripts}/**.{ts,json,js}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4