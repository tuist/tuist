{$CADDY_HOST} {
	reverse_proxy cache-app:4000 {
		# Flush responses immediately for streaming
		flush_interval -1

		# Long timeouts for large file uploads/downloads
		transport http {
			read_timeout 30m
			write_timeout 30m
		}
	}

	# Enable compression for text responses only
	@compressible {
		header Content-Type application/json*
		header Content-Type text/*
	}
	encode @compressible gzip zstd
}
